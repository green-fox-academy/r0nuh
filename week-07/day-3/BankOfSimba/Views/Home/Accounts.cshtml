@model System.Collections.Generic.List<BankOfSimba.Models.BankAccount>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Bank of Simba</title>
    <link rel="stylesheet" type="text/css" href="~/style.css">
</head>
<body>
    <table style="width:50%">
        <tr>
            <th></th>
            <th>Name</th>
            <th>Balance</th>
            <th>Animal</th>
            <th>The owner is</th>
        </tr>
        @foreach (var account in @Model)
        {
        <tr>
            <td>@Model.IndexOf(account)</td>
            <td>@account.Name</td>
            <td>@account.Balance.ToString("N2")  @account.Currency</td>
            <td>@account.AnimalType</td>
            @if (@account.King == true)
            {
                <td id="king">The King</td>
            }
            else
            {
                <td></td>
            }
        </tr>
        }
        
    </table>
</body>
</html>