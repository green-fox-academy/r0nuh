@model System.Collections.Generic.IList<ListingTodos.Models.Todo>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>TODOs</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body>
    <div class="container theme-showcase" role="main">
        <div class="page-header">
            <h1>TODOs for today:</h1>
        </div>
        <form action="/todo/add" method="get">
            <button type="submit" class="btn btn-success">Add new todo</button>
        </form><br />
        <div class="row">
            <div class="col-md-6">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col"></th>
                            <th scope="col">ID</th>
                            <th scope="col">Task</th>
                            <th scope="col">Done</th>
                            <th scope="col">Urgent</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                <form action="/todo/edit/@item.Id" method="get">
                                    <button type="submit" class="btn btn-warning">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </button>
                                </form>
                            </td>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.IsDone</td>
                            <td>@item.IsUrgent</td>
                            <td>
                                <form action="/todo/@item.Id/delete" method="post">
                                    <button type="submit" class="btn btn-danger">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                </form>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>