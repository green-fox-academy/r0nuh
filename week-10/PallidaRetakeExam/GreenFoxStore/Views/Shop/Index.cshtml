@model System.Collections.Generic.List<GreenFoxStore.Models.Item>

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
<head>
    <meta charset="utf-8"/>
    <title>Green Fox Shop</title>
</head>
<body>
    <h1>Green Fox Fashion Web Store</h1>
